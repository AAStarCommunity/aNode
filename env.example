# aNode Paymaster Configuration (Cloudflare Workers)
# Copy this file to .env and fill in your values

# =============================================================================
# CLOUDFLARE WORKERS CONFIGURATION
# =============================================================================

# Cloudflare Account (for Wrangler CLI)
CF_ACCOUNT_ID=your_cloudflare_account_id
CF_API_TOKEN=your_cloudflare_api_token

# KV Namespace IDs (create in Cloudflare Dashboard)
CACHE_KV_NAMESPACE_ID=your_cache_kv_id
SETTLEMENT_KV_NAMESPACE_ID=your_settlement_kv_id

# Environment
NODE_ENV=development
LOG_LEVEL=info

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Ethereum RPC URLs (use your preferred provider)
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# EntryPoint Contract Addresses
ENTRYPOINT_V07_ADDRESS=0x0000000071727De22E5E9d8BAf0edAc6f37da032

# =============================================================================
# PAYMASTER CONFIGURATION (PHASE 1)
# =============================================================================

# Paymaster Private Key (development only - NEVER use in production!)
# WARNING: Use Cloudflare Secrets for production instead
PAYMASTER_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# Cloudflare Secret Name (production)
# PAYMASTER_SECRET_NAME=anode_paymaster_key

# Paymaster Contract Address (deploy your own Singleton Paymaster)
PAYMASTER_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# =============================================================================
# MODULE CONFIGURATION (PHASE 2+)
# =============================================================================

# SBT Validation
ENABLE_SBT_VALIDATION=false
SBT_CONTRACT_ADDRESSES=0xabcd1234...,0xefgh5678...
REQUIRED_SBT_TYPES=identity,reputation

# PNT Balance Validation
ENABLE_PNT_VALIDATION=false
PNT_CONTRACT_ADDRESS=0x1234567890abcdef1234567890abcdef1234567890
MIN_PNT_BALANCE=100000000000000000000

# Security Configuration
ENABLE_SECURITY_FILTER=true
SECURITY_RISK_THRESHOLD=70
REQUIRE_USER_CONFIRMATION=true

# =============================================================================
# ULTRA-RELAY CONFIGURATION (PHASE 2)
# =============================================================================

# Executor Accounts (for UltraRelay sponsorship)
EXECUTOR_PRIVATE_KEYS=0x1234...,0x5678...,0x9abc...

# Settlement Configuration
ENABLE_INTEGRAL_SYSTEM=true
SETTLEMENT_CONTRACT_ADDRESS=0x9876543210987654321098765432109876543210

# =============================================================================
# CACHE & STORAGE (Cloudflare KV)
# =============================================================================

# Cache TTL (in seconds)
SBT_CACHE_TTL=300
PNT_CACHE_TTL=60
SECURITY_CACHE_TTL=600
SETTLEMENT_CACHE_TTL=86400

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Local Development Port (only for Node.js version)
PORT=8787

# Debug Mode
DEBUG=true
ENABLE_METRICS=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Rate Limiting (Cloudflare Workers built-in)
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8787,https://yourdomain.com

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Security Analysis Services
ENABLE_CHAINABUSE_CHECK=false
CHAINABUSE_API_KEY=your_chainabuse_key

# Gas Price Oracle
GAS_PRICE_ORACLE_URL=https://api.etherscan.io/api

# Monitoring Webhook (future)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
